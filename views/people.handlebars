<html>
{{#each foo}}
{{this}}
{{/each}}
<h3>Add new student:</h3>
<form id="addperson" action="/people" method="post">
    First name: <input type="text" name="firstName"><br>
    Last name: <input type="text" name="lastName"><br>
    BirthDate: <input type="date" name="birthdate"><br>
    House: <select name="houseID"> 
        {{#each houses}}
        <option value="{{houseID}}">{{houseName}}</option>
        {{/each}}
    </select><br>
    Wand Description: <input type="text" name="wand"><br>
    <input type="submit" value="Submit">
 </form>
<br/>

<form id='filter_people' action='' method=''>
<!--- this form does not submit directly, the button handles all the interaction with backend -->
    <label> Filter by house </label>
    <select id='house_filter' name="houseName"> 
        {{#each houses}}
        <option value="{{houseID}}">{{houseName}}</option>
        {{/each}}
    </select><br>
    <input type="button" value="Filter" onclick="filterPeopleByHouse()">
</form>

<form id='search_students' action='' method=''>
<!--- this form does not submit directly, the button handles all the interaction with backend -->
    <label> Search students for first name starting with:</label>
    <input id='first_name_search_string' type='text' name='first_name_search_string' value=''>
    <input type="button" value="Search" onclick="searchPeopleByFirstName()">
</form>

<h3>Current students:</h3>
<table>
    <thead> 
        <th>First Name</th> 
        <th>Last Name</th> 
        <th>Birth Date</th>
        <th>House</th>  
        <th>Wand</th>  
    </thead> 
    <tbody>
        {{#each people}} 
        <tr> 
            <td>{{firstName}}</td> 
            <td>{{lastName}}</td> 
            <td>{{birthdate}}</td> 
            <td>{{houseName}}</td>
            <td>{{wand}}</td>
            <td><button onclick="deletePerson({{studentID}})">Delete</button></td>
            <td><a href="/people/{{studentID}}">Update</a></td>
        </tr> 
        {{/each}} 
    </tbody> 
</table> 
</html>
