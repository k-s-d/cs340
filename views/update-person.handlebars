<html>
<h1>Update {{person.firstName}} {{person.lastName}}:</h1>
<form id="update-person" action="/people" method="post">
    First name: <input type="text" name="firstName" value="{{person.firstName}}"><br>
    Last name: <input type="text" name="lastName" value="{{person.lastName}}"><br>
    BirthDate: <input type="date" name="birthdate" value="{{person.birthdate}}"><br>
    House: <select name="houseID"> 
        {{#each houses}}
        <option value="{{houseID}}">{{houseName}}</option>
        {{/each}}
    </select><br>
    Wand Description name: <input type="text" name="wand" value="{{person.wand}}"><br>
</form>
<button onclick="updatePerson({{person.studentID}})">Update{{person.studentID}}</button>
{{!-- <script defer>selectPlanet({{person.homeworld}});</script> --}}
</html>
